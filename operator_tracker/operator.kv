		    font_size: 32

		Label:
            text: 'Select Existing Operator:'

        Spinner:
            id: spinner
            text: "Operators"
            multiple: True
            values: ['Operator 1', 'Operator 2', 'Operator 3', 'Operator 4']

        Label:
            text: 'Operator Name:'
            font_size: sp(20)

        TextInput:
            id: update_operator_name
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a string"
            write_tab: False

        Label:
            text: 'Average RateMyPilot Score:'
            font_size: sp(20)

        TextInput:
            id: update_operator_rmp_score
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a number"
            input_filter: 'int'
            write_tab: False

        Label:
            text: 'Select Airplanes:'

        Spinner:
            id: update_airplane_spinner
            text: "Airplanes"
            multiple: True
            values: ['Airplane 1', 'Airplane 2', 'Airplane 3', 'Airplane 4']

        Label:
            text: 'Select Airports:'

        Spinner:
            id: update_airport_spinner
            text: "Airports"
            multiple: True
            values: ['Option 1', 'Option 2', 'Option 3', 'Option 4']

        Label:
            text: ' '

        Button:
            text: "Update Operator"
            font_size: 32
            on_press: app.edit_operator(update_operator_name.text, update_operator_rmp_score.text)

		Button:
			text: "Back"
			font_size: 32
			on_release:
				app.root.current = "third"
				root.manager.transition.direction = "right"


