WindowManager:
	FirstWindow:
	SecondWindow:
	ThirdWindow:
	FourthWindow:
	FifthWindow:
	SixthWindow:


<FirstWindow>:
	name: "first"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Main Menu:"
			font_size: 32

		Button:
			text: "New Airplane"
			font_size: 32
			on_release:
				app.root.current = "second"
				root.manager.transition.direction = "left"

		Button:
			text: "Add/Edit Operator"
			font_size: 32
			on_release:
				app.root.current = "third"
				root.manager.transition.direction = "left"

		Button:
			text: "New Airport"
			font_size: 32
			on_release:
				app.root.current = "fourth"
				root.manager.transition.direction = "left"


<SecondWindow>:
	name: "second"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

	    Label:
		    text: "New Airplane:"
		    font_size: 32

		Label:
            text: 'Airplane Name:'
            font_size: sp(20)

        TextInput:
            id: airplane_name
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a string"
            write_tab: False

        Label:
            text: 'Airplane Range (in km):'
            font_size: sp(20)


        TextInput:
            id: airplane_range
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a number"
            input_filter: 'int'
            write_tab: False

        Label:
            text: ' '
            font_size: sp(20)

        Button:
            text: "Create Airplane"
            font_size: 32
            on_press: app.create_airplane(airplane_name.text, airplane_range.text)

		Button:
			text: "Back"
			font_size: 32
			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"


<ThirdWindow>:
	name: "third"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Add/Edit Operator:"
			font_size: 32

		Button:
			text: "Create New Operator"
			font_size: 32
			on_release:
				app.root.current = "fifth"
				root.manager.transition.direction = "left"

		Button:
			text: "Select Existing"
			font_size: 32
			on_release:
				app.root.current = "sixth"
				root.manager.transition.direction = "left"

		Button:
			text: "Go Back"
			font_size: 32
			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"


<FourthWindow>:
	name: "fourth"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
		    text: "New Airport:"
		    font_size: 32

		Label:
            text: 'Airport Name:'
            font_size: sp(20)

        TextInput:
            id: airport_name
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a string"
            write_tab: False

        Label:
            text: 'ICAO Airport Code:'
            font_size: sp(20)

        TextInput:
            id: airport_ICAO
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a string"
            write_tab: False

        Label:
            text: 'Latitude:'
            font_size: sp(20)

        TextInput:
            id: latitude
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a number"
            write_tab: False

        Label:
            text: 'Longitude:'
            font_size: sp(20)

        TextInput:
            id: longitude
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a number"
            write_tab: False

        Label:
            text: ' '
            font_size: sp(20)

        Button:
            text: "Create Airport"
            font_size: 32
            on_press: app.create_airport(airport_name.text, longitude.text, latitude.text, airport_ICAO.text)

		Button:
			text: "Back"
			font_size: 32
			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"

<FifthWindow>:
	name: "fifth"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
		    text: "Create New Operator:"
		    font_size: 32

        Label:
            text: 'Operator Name:'
            font_size: sp(20)

        TextInput:
            id: operator_name
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a string"
            write_tab: False

        Label:
            text: 'Average RateMyPilot Score:'
            font_size: sp(20)

        TextInput:
            id: operator_rmp_score
            multiline: False
            focus: True
            font_size: sp(20)
            hint_text: "enter a number"
            input_filter: 'int'
            write_tab: False

        Label:
            text: 'Select Airplanes:'

        Spinner:
            id: airplane_spinner
            text: "Airplanes"
            multiple: True
            values: ['Airplane 1', 'Airplane 2', 'Airplane 3', 'Airplane 4']

        Label:
            text: 'Select Airports:'

        Spinner:
            id: airport_spinner
            text: "Airports"
            multiple: True
            values: ['Airport 1', 'Airport 2', 'Airport 3', 'Airport 4']

        Label:
            text: ' '
            font_size: sp(20)

        Button:
            text: "Create Operator"
            font_size: 32
            on_press: app.create_operator(operator_name.text, operator_rmp_score.text)


		Button:
			text: "Back"
			font_size: 32
			on_release:
				app.root.current = "third"
				root.manager.transition.direction = "right"

<SixthWindow>:
	name: "sixth"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
