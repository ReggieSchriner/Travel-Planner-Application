WindowManager:
    MainMenu:
        name: 'main_menu'
    NewVenue:
        name: 'new_venue'
    AddEditOperator:
        name: 'add/edit_operator'
    EditOperator:
        name: 'edit_operator'
    CheckForecast:
        name: 'check_forecast'
    SubmitReview:
        name: 'submit_review'
    ReviewItinerary:
        name: 'review_itinerary'

<MainMenu>:
    BoxLayout:
        canvas.before:
            Color:
                rgba:(0, 0, .08, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .05
            Label:
                text: 'Package Deal Tracker'
                rgba: (217, 162, 190, 0.8)
                font_size: sp(40)
                size_hint: .5, .5
                pos_hint: {'center_x': .5}
                bold: True
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .3
            padding: 40
            spacing: 10
            Button:
                text: 'New Venue'
                background_color:(.1, .3, .8, 0.9)
                pos_hint: {'center_x': .5}
                size_hint: .6, 1
                font_size: sp(22)
                on_release:
                    app.root.current = 'new_venue'
            Button:
                text: 'Add/Edit Operator'
                background_color:(.1, .3, .8, 0.9)
                pos_hint: {'center_x': .5}
                size_hint: .6, 1
                font_size: sp(22)
                on_release:
                    app.root.current = 'add/edit_operator'
            Button:
                text: 'Check Forecast'
                background_color:(.1, .3, .8, 0.9)
                pos_hint: {'center_x': .5}
                size_hint: .6, 1
                font_size: sp(22)
                on_release:
                    app.root.current = 'check_forecast'
            Button:
                text: 'Submit Review'
                background_color:(.1, .3, .8, 0.9)
                pos_hint: {'center_x': .5}
                size_hint: .6, 1
                font_size: sp(22)
                on_release:
                    app.root.current = 'submit_review'
            Button:
                text: 'Review Itinerary'
                background_color:(.1, .3, .8, 0.9)
                pos_hint: {'center_x': .5}
                size_hint: .6, 1
                font_size: sp(22)
                on_release:
                    app.root.current = 'review_itinerary'
            Button:
                text: 'Exit App'
                background_color:(.5, .1, .2, 0.9)
                size_hint: .3, .7
                pos_hint: {'center_x': .5}
                font_size: sp(22)
                on_press: quit()

<NewVenue>:
    BoxLayout:
        canvas.before:
            Color:
                rgba:(0, 0, .08, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            padding: 10
            spacing: 10
            orientation: 'vertical'
            Label:
                text: 'New Venue'
                rgba: (217, 162, 190, 0.8)
                font_size: sp(40)
                size_hint: .5, .5
                pos_hint: {'center_x': .5}
                bold: True
            Label:
                text: "Enter in new venue's name:"
                font_size: sp(22)
                size_hint: .5, .5
                pos_hint: {'center_x': .5, 'center_y': 1}
            TextInput:
                id: name
                size_hint: .80, .65
                pos_hint: {'center_x': .5, 'center_y': .5}
            Label:
                text: "Enter in new venue's Longitude:"
                font_size: sp(22)
                size_hint: .5, .5
                pos_hint: {'center_x': .5, 'center_y': 1}
            TextInput:
                id: longitude
                size_hint: .80, .65
                pos_hint: {'center_x': .5, 'center_y': .5}
                input_filter: 'float'
            Label:
                text: "Enter in new venue's Latitude:"
                font_size: sp(22)
                size_hint: .5, .5
                pos_hint: {'center_x': .5, 'center_y': 1}
            TextInput:
                id: latitude
                size_hint: .80, .65
                pos_hint: {'center_x': .5, 'center_y': .5}
                input_filter: 'float'
            Label:
                text: "Enter in new venue's type:"
                font_size: sp(22)
                size_hint: .5, .5
                pos_hint: {'center_x': .5, 'center_y': 1}
            TextInput:
                id: type
                size_hint: .80, .65
                pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                text: 'Submit'
                background_color:(.1, .3, .8, 0.9)
                size_hint: .3, 1
                pos_hint: {'center_x': .5}
                font_size: sp(22)
                on_press: root.add_venue()
            Label:
                text: ''
                id: message
            Button:
                background_color:(.5, .1, .2, 0.9)
                size_hint: .35, 1
                pos_hint: {'center_x': .5}
                font_size: sp(22)
                text: 'Back'
                on_release:
                    app.root.current = 'main_menu'

