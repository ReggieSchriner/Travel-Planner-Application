WindowManager:
    MainMenu:
        name: 'main_menu'
    NewVenue:
        name: 'new_venue'
    AddEditOperator:
        name: 'add/edit_operator'
    EditOperator:
        name: 'edit_operator'
    CheckForecast:
        name: 'check_forecast'
    SubmitReview:
        name: 'submit_review'


<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Package Deal Tracker'
        Button:
            text: 'New Venue'
            on_release:
                app.root.current = 'new_venue'
        Button:
            text: 'Add/Edit Operator'
            on_release:
                app.root.current = 'add/edit_operator'
        Button:
            text: 'Check Forecast'
            on_release:
                app.root.current = 'check_forecast'
        Button:
            text: 'Submit Review'
            on_release:
                app.root.current = 'submit_review'
        Button:
            text: 'Exit App'
            on_press: quit()

<NewVenue>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'New Venue'
        Label:
            text: 'Name'
        TextInput:
            id: name
        Label:
            text: 'Longitude'
        TextInput:
            id: longitude
            input_filter: 'float'
        Label:
            text: 'Latitude'
        TextInput:
            id: latitude
            input_filter: 'float'
        Label:
            text: 'Type'
        TextInput:
            id: type
        Button:
            text: 'Submit'
            on_press: root.add_venue()
        Label:
            text: ''
            id: message
        Button:
            text: 'Back'
            on_release:
                app.root.current = 'main_menu'

<AddEditOperator>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Add/Edit Operator'
        Label:
            text: 'Name'
        TextInput:
            id: name
        Label:
            text: 'Score'
        TextInput:
            id: score
            input_filter: 'float'
        Button:
            text: 'Add'
            on_press: root.add_operator()
        Label:
            id: message
        Button:
            text: 'Edit Operator'
            on_release:
                app.root.current = 'edit_operator'
        Button:
            text: 'Back'
            on_release:
                app.root.current = 'main_menu'

<EditOperator>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Edit Operator'
        Label:
            text: 'New name'
        TextInput:
            id: new_name
        Label:
            text: 'Score'
        TextInput:
            id: score
        BoxLayout:
            id: operators
        Button:
            text: 'Submit'
            on_press: root.submit_operator()
        Label:
            id: message
        Button:
            text: 'Back'
            on_release:
                app.root.current = 'add/edit_operator'

<CheckForecast>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Check Forecast'
        Label:
            text: 'Date'
        BoxLayout:
            id: date
        Label:
            text: 'Venue'
        BoxLayout:
            id: venues
        Label:
            text: 'Forecast'
        Label:
            id: forecast
            text:
        Label:
            id: message
        Button:
            text: 'Submit'
            on_press: root.get_forecast()
        Button:
            text: 'Back'
            on_release:
                app.root.current = 'main_menu'

<SubmitReview>
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Submit Review'
        Label:
            text: 'Venue'
        Label:
            text: 'Score'
        TextInput:
            id: venue_score
            input_filter: 'int'
        BoxLayout:
            orientation: 'vertical'
            id: venues
        Label:
            text: 'Operator'
        Label:
            text: 'Score'
        TextInput:
            id: operator_score
            input_filter: 'int'
        BoxLayout:
            orientation: 'vertical'
            id: operators
        Button:
            text: 'Submit'
            on_press: root.submit_scores()
        Label:
            text: ''
            id: message
        Button:
            text: 'Back'
            on_release:
                app.root.current = 'main_menu'

