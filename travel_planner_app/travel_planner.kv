<MainMenu>
    name: 'main_menu'
    BoxLayout:
        canvas.before:
            Color:
                rgba:(0, 0, .08, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .25
            Label:
                rgba: (217, 162, 190, 0.8)
                font_size: sp(40)
                size_hint: .5, .5
                pos_hint: {'center_x': .5}
                bold: True
                text: 'Main Menu'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .3
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, .5
                    font_size: sp(16)
                    text: 'Amount of cities needed to be validated: '
                Label:
                    size_hint: 1, .5
                    font_size: sp(16)
                    text: 'Amount of airports needed to be validated: '
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, .5
                    font_size: sp(16)
                    text: 'Amount of operators needed to be updated: '
                Label:
                    size_hint: 1, .5
                    font_size: sp(16)
                    text: 'Amount of venues needed to be updated: '
        BoxLayout:
            orientation: 'vertical'
            padding: 40
            spacing: 10
            Button:
                background_color:(.1, .3, .8, 0.9)
                size_hint: .5, .5
                pos_hint: {'center_x': .5}
                text: 'Advance calendar by one day'
                font_size: sp(22)
            Button:
                background_color:(.1, .3, .8, 0.9)
                size_hint: .5, .9
                pos_hint: {'center_x': .5}
                text: 'Validate Locations'
                font_size: sp(22)
                on_release: app.root.current = 'validate_page'
            Button:
                background_color:(.1, .3, .8, 0.9)
                size_hint: .5, .9
                pos_hint: {'center_x': .5}
                text: 'Update Ratings'
                font_size: sp(22)
                on_release: app.root.current = 'update_page'
            Button:
                background_color:(.1, .3, .8, 0.9)
                size_hint: .5, .9
                pos_hint: {'center_x': .5}
                text: 'Prepare Itinerary'
                font_size: sp(22)
                on_release: app.root.current = 'itinerary_page'
            Button:
                background_color:(.5, .1, .2, 0.9)
                size_hint: .3, .5
                pos_hint: {'center_x': .5}
                text: 'Exit App'
                font_size: sp(22)
                on_press: quit()

<ValidateLocationsPage>
    name: 'validate_page'
    BoxLayout:
        canvas.before:
            Color:
                rgba:(0, 0, .08, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .25
            Label:
                rgba: (217, 162, 190, 0.8)
                font_size: sp(40)
                size_hint: .5, .5
                pos_hint: {'center_x': .5}
                bold: True
                text: 'Validate Locations Page'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .25
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            Label:
                font_size: sp(22)
                text: 'Select an airport to validate:'
                size_hint: 1, .25
            Spinner:
                size_hint: .5,.5
                background_color:(.3, .5, .5, 10)
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Pick an airport'
                font_size: sp(22)
                values: ['', '', '']
            Label:
                font_size: sp(22)
                text: 'Select a city to validate:'
                size_hint: 1, .25
            Spinner:
                size_hint: .5,.5
                background_color:(.3, .5, .5, 10)
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Pick a city'
                font_size: sp(22)
                values: ['', '', '']
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .4
            padding: 20
            Button:
                background_color:(.1, .3, .8, 0.9)
                size_hint: .35, .4
                pos_hint: {'center_x': .5}
                text: 'Validate'
                font_size: sp(22)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .5
            padding: 30
            spacing: 10
            Button:
                background_color:(.5, .1, .2, 0.9)
                size_hint: .35, 1
                pos_hint: {'center_x': .5}
                text: 'Back to Main Menu'
                font_size: sp(22)
                on_release: app.root.current = 'main_menu'

