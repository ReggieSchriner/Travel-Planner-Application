WindowManager:
    CredentialsWindow:
    LoadingScreen:
    MainMenu:
    ValidateLocationsPage:
    UpdateRatingsPage:
    ItineraryPage:

<CredentialsWindow>
    name: 'credentials'
    BoxLayout:
        canvas.before:
            Color:
                rgba:(0, 0, .08, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .25
            Label:
                rgba: (217, 162, 190, 0.8)
                font_size: sp(40)
                size_hint: .5, .5
                pos_hint: {'center_x': .5}
                bold: True
                text: 'Credentials'
        BoxLayout:
            orientation: 'horizontal'
            padding: 10
            spacing: 10
            BoxLayout:
                padding: 10
                orientation: 'vertical'
                canvas.before:
                    Line:
                        width: 1.2
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: 'Remote Database'
                    font_size: sp(22)
                    underline: True
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter authority:"
                TextInput:
                    id: authority
                    size_hint: 1, .65
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'TCP'
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter in port number:"
                TextInput:
                    id: port
                    size_hint: 1, .65
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: '3306'
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter database name:"
                TextInput:
                    id: database
                    size_hint: 1, .7
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'combined_database'
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter username:"
                TextInput:
                    id: username
                    size_hint: 1, .65
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'zridha'
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter password:"
                TextInput:
                    id: password
                    size_hint: 1, .65
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    password: True
            BoxLayout:
                padding: 10
                spacing: 10
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: (217, 162, 190, 0.8)
                    Line:
                        width: 1.2
                        rectangle: self.x, self.y, self.width, self.height
                BoxLayout:
                    size_hint: 1, .5
                    Label:
                        text: 'Open Weather'
                        font_size: sp(22)
                        underline: True
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter authority:"
                TextInput:
                    id: weatherauthority
                    size_hint: 1, .65
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: 'api.openweathermap.org'
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter in port number:"
                TextInput:
                    id: weatherport
                    size_hint: 1, .65
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: '443'
                Label:
                    font_size: sp(22)
                    size_hint: .5, .5
                    pos_hint: {'center_x': .5, 'center_y': 1}
                    text: "Enter API key:"
                TextInput:
                    id: apikey
                    size_hint: 1, .65
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: ''
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .18
            Label:
                id: message
                text: 'This is the error message'
        BoxLayout:
            orientation: 'vertical'
            padding: 50
            spacing: 10
            size_hint: 1, .5
            Button:
                background_color:(.1, .3, .8, 0.9)
                size_hint: .3, .6
                pos_hint: {'center_x': .5}
                text: 'Submit'
                font_size: sp(22)
                on_press: app.credentials_window.add_credentials()

