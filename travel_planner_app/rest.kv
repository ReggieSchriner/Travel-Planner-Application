BoxLayout:
    orientation: 'vertical'
    ScrollView:
        Records:
            records: app.records
    Button:
        text: 'Load Records'
        size_hint: (1.0, 0.25)
        on_press: app.load_records()

<Records>:
    orientation: 'vertical'
    size_hint: (1.0, None)
    height: sum(child.height for child in self.children)

<Record>:
    text_size: self.size
    halign: 'center'
